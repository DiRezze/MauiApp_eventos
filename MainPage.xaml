<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGerenteDeEventos.MainPage"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="24">

            <Label Text="Gerente de Eventos" HorizontalTextAlignment="Center" FontSize="32" FontAttributes="Bold" />

            <HorizontalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Image Source="img01.png" HorizontalOptions="CenterAndExpand" MaximumHeightRequest="320"/>
            </HorizontalStackLayout>

            <Button Clicked="Button_Clicked" Text="Criar novo evento"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
