<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGerenteDeEventos.Views.CadastroEventos"
             Title="Cadastro de Eventos"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="16"
            HorizontalOptions="FillAndExpand">

            <VerticalStackLayout Spacing="4">
                <Label Text="Nome do Evento" FontAttributes="Bold" />
                <Entry Text="{Binding Nome}" Placeholder="Digite o nome do evento" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="4">
                <Label Text="Local do Evento" FontAttributes="Bold" />
                <Entry Text="{Binding Local}" Placeholder="Digite o local do evento" />
            </VerticalStackLayout>

            <Frame BackgroundColor="Transparent" 
                   BorderColor="{StaticResource Gray600}" 
                   Padding="10">
                <VerticalStackLayout HorizontalOptions="CenterAndExpand">
                    
                    <HorizontalStackLayout Padding="4"
                                           Spacing="10">
                        <HorizontalStackLayout HorizontalOptions="Center" 
                                               VerticalOptions="Center">
                            <Label Text="Data de Início: " 
                                   FontAttributes="Bold"
                                   VerticalOptions="CenterAndExpand"
                                   Margin="0, 0, 10, 0"/>
                            <DatePicker Date="{Binding DataInicio}" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="Center" 
                                               VerticalOptions="Center">
                            <Label Text="Data de Término:" 
                                   FontAttributes="Bold"
                                   VerticalOptions="CenterAndExpand"
                                   Margin="0, 0, 10, 0"
                                   />
                            <DatePicker Date="{Binding DataTermino}" />
                        </HorizontalStackLayout>

                    </HorizontalStackLayout>
                    
                </VerticalStackLayout>
            </Frame>


            <HorizontalStackLayout Spacing="4" HorizontalOptions="FillAndExpand">
                <Label Text="Número de Participantes: " 
                       FontAttributes="Bold" 
                       VerticalOptions="Center"
                       Margin="0, 0, 10, 0"/>

                <Entry Text="{Binding NumeroParticipantes}"
                       HorizontalOptions="FillAndExpand"
                       Keyboard="Numeric" 
                       Placeholder="Nº de participantes" />
            </HorizontalStackLayout>

            <Label Text="Custo por Participante" FontAttributes="Bold" />
            <Entry Text="{Binding CustoPorParticipante}" Keyboard="Numeric" Placeholder="Digite o custo por participante" />

            <Button Text="Prosseguir" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>